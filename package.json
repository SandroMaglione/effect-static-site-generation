{
  "name": "menimal",
  "version": "0.0.8",
  "author": "Sandro Maglione",
  "description": "Generate a static html-only website from markdown and css",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SandroMaglione/effect-static-site-generation.git"
  },
  "keywords": [
    "effect"
  ],
  "main": "./dist/bin.js",
  "bin": {
    "menimal": "./dist/bin.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "tsc": "tsc -p tsconfig.json",
    "build": "ts-node src/bin.ts",
    "bundle": "tsup src/bin.ts",
    "upload": "pnpm bundle && npm publish"
  },
  "dependencies": {
    "@effect/platform": "^0.43.7",
    "@effect/platform-node": "^0.42.7",
    "@effect/schema": "^0.61.5",
    "effect": "^2.2.3",
    "front-matter": "^4.0.2",
    "html-minifier": "^4.0.0",
    "lightningcss": "^1.23.0",
    "mustache": "^4.2.0",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.5",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.16",
    "@types/showdown": "^2.0.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
